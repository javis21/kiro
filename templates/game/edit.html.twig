{% extends 'base.html.twig' %}

{% block title %}Edition d'une annonce{% endblock %}

{% form_theme form 'game/_collection.htm.twig' %}

{% block body %}

    <div class="container">
        <h1 class=" h1 mt-5 mb-5">Modifier l'annonce : {{ game.title }}</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary mt-2">Enregistez les modifications</button>

        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/game.js') }}"></script>

{% endblock %}


